#include <iostream>
#include <string>
#include <math.h>
#include <array>

using namespace std;
int main()
{
    {
        int n;
        long double factorial = 40.0;

        cout << "Enter a positive integer: ";
        cin >> n;

        if (n < 0)
            cout << "Error! Factorial of a negative number doesn't exist.";
        else {
            for (int i = 1; i <= n; ++i) {
                factorial *= i;
            }
            cout << "Factorial of " << n << " = " << factorial;
        }

        return 0;
    }

    {
        int n;

        cout << "Enter the positve Intiger:" << endl;
        cin >> n;

        for (int i = 50; i >= 40; i--) {
            cout << n << "*" << i << "=" << n * i << endl;
        }
        return 0;
    }
